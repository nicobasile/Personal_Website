<div class="container text-center">
    <h1>Sample Software Subscription/Membership</h1>
    <h4>This is a tech demo - it has full functionality but doesn't grant access to any software</h4>
</div>
<div class="container subscription-links">
  <div class="row">
    <% if user_signed_in? %>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Your Profile</h2>
          <% if current_user.profile %>
            <%= link_to "Edit Your Profile", '#', class: 'btn btn-default btn-lg btn-block' %>
            <%= link_to "View Your Profile", user_path(id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <% else %>
            <p class="text-center">Make a profile so that others can see your information</p>
            <%= link_to "Create your profile!", new_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">The Community</h2>
          <p class="text-center">Look at who else has created accounts!</p>
          <%= link_to "View the Community", '#', class: 'btn btn-default btn-lg btn-block' %>
        </div>
      </div>
    <% else %>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Basic Subscription</h2>
          <h4 class="text-center">Sign up for free and get basic access to the software.</h4>
          <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Pro Subscription</h2>
          <h4 class="text-center">Sign up for $5 per month and get full access to the software.</h4>
          <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>